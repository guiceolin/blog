<ul class="post-list">
  <% posts.each_with_index do |post, index| %>
    <li class=<%= (index % 2) == 0 ? "even" : "odd"%>>
      <article>
        <header>
          <h2>
            <a class="post-title" href="<%= post.path %>"><strong><%= post.title %></strong></a>
          </h2>
        </header>
        <section class="resume">
          <%= introduction post %>
          <p class='see-more'>
            <a href="<%= post.path %>"><%= t :continue_reading %></a>
          </p>
        </section>
        <footer>
          <%= published_at post.date %>
        </footer>
      </article>
    </li>
  <% end %>
</ul>

