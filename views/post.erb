<article class="post">
  <header>
    <h1>
      <a href="<%= post.path %>"><%= post.title %></a>
    </h1>
  </header>
  <section id="post-content">
    <%= markdown post.body %>
  </section>
  <footer>
    <p class="date">
     <%= t :published_at %>:
    <span class="date"><%= l post.date %></span>
  </p>
  </footer>
</article>
